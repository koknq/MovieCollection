                                <Button Style="{StaticResource ButtonStyle1}" x:Name="comedyButton" Content="Comedy" Width="50" Margin="0,10,5,10" FontSize="13" Foreground="DimGray" FontFamily="Georgia" HorizontalAlignment="Left" Click="comedyButton_Click" MouseEnter="comedyButton_MouseEnter" MouseLeave="comedyButton_MouseLeave"/>
