                                </input:AutoCompleteBox.Text>-->
                            </input:AutoCompleteBox>
                        </DockPanel>
                        <DockPanel HorizontalAlignment="Center">
                            <DockPanel HorizontalAlignment="Left" Width="300" Margin="20,40,0,0">
                                <Button Style="{StaticResource ButtonStyle1}" x:Name="saveMovieButton" Content="Save" Width="200"  Height="30" FontSize="20" Foreground="DimGray" FontFamily="Georgia" HorizontalAlignment="Center" Click="saveMovieButton_Click" MouseEnter="saveMovieButton_MouseEnter" MouseLeave="saveMovieButton_MouseLeave"></Button>
                            </DockPanel>
                            <DockPanel HorizontalAlignment="Right" Width="300" Margin="20,40,0,0">
                                <Button Style="{StaticResource ButtonStyle1}" x:Name="discardMovieButton" Content="Discard" Width="200"  FontSize="20" Foreground="DimGray" FontFamily="Georgia" HorizontalAlignment="Center" Click="discardMovieButton_Click" MouseEnter="discardMovieButton_MouseEnter" MouseLeave="discardMovieButton_MouseLeave"></Button>
                            </DockPanel>
